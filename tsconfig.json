{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/main",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "bower_components"
  ]
}